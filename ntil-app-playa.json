{
    "id": "ntil",
    "instances": 1,
    "cpus": 1,
    "mem": 512,
    "user": "vagrant",
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "python:2.7",
            "network": "HOST",
            "portMappings": [
                { "containerPort": 9889, "hostPort": 9889, "protocol": "tcp" }
            ],
            "parameters": [
                { "key": "w", "value": "/usr/ntil" }
            ]
        },
        "volumes": [
            { "containerPath": "/usr/ntil", "hostPath": "/home/vagrant", "mode": "RO" }
        ]
    },
    "uris": [
        "https://github.com/mhausenblas/ntil/archive/master.zip"
    ],
    "cmd": "ntil-master/ntil-server.py -e 2015-05-15T17:00:00 -t dcos"
}